{
    "name": "TrueBlock",
    "description": "The simple website blocker.",
    "version": "0.7.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "TrueBlock",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}
