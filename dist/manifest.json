{
    "name": "Ethical Blocker",
    "description": "The ethical site blocker.",
    "version": "0.7.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Ethical Blocker",
        "default_popup": "popup.html"
    },
    "permissions": [
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}
