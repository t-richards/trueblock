{
    "private": true,
    "devDependencies": {
        "@types/chrome": "0.0.177"
    },
    "dependencies": {
        "esbuild": "^0.14.18",
        "idb": "^7.0.0",
        "preact": "^10.6.5"
    },
    "scripts": {
        "build": "esbuild src/background.ts src/popup.ts src/options.ts --bundle --minify --outdir=dist",
        "start": "esbuild src/background.ts src/popup.tsx src/options.tsx --bundle --outdir=dist --watch",
        "dist": "npm run clean && npm run build && npm run pack",
        "clean": "rm -f dist/*.js dist/*.zip",
        "pack": "cd dist && zip -r package.zip *"
    }
}
