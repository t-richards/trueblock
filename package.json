{
  "private": true,
  "devDependencies": {
    "@picocss/pico": "^1.5.3",
    "@types/chrome": "^0.0.193",
    "esbuild": "^0.14.49",
    "preact": "^10.10.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "esbuild src/background.ts src/popup.tsx src/options.tsx src/app.css --bundle --minify --legal-comments=none --outdir=dist",
    "build:dev": "esbuild src/background.ts src/popup.tsx src/options.tsx src/app.css --bundle --sourcemap=inline --watch --outdir=dist",
    "dist": "npm run clean && npm run build && npm run pack",
    "clean": "rm -f dist/*.js dist/*.css dist/*.zip",
    "pack": "cd dist && zip -r package.zip *",
    "tsc": "tsc --project tsconfig.json --noEmit --watch --preserveWatchOutput"
  }
}
