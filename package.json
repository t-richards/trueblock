{
    "private": true,
    "devDependencies": {
        "@types/chrome": "0.0.177"
    },
    "dependencies": {
        "esbuild": "^0.14.18",
        "idb": "^7.0.0",
        "preact": "^10.6.5"
    },
    "scripts": {
        "background": "esbuild src/background.ts --bundle --minify --outfile=dist/background.js",
        "popup": "esbuild src/popup.ts --bundle --minify --outfile=dist/popup.js",
        "build": "npm run background && npm run popup",
        "dist": "npm run clean && npm run build && npm run pack",
        "clean": "rm -f dist/*.js dist/*.zip",
        "pack": "cd dist && zip -r package.zip *"
    }
}
