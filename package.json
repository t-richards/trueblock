{
  "private": true,
  "devDependencies": {
    "@types/chrome": "0.0.177",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "esbuild": "^0.14.18",
    "eslint": "^8.8.0",
    "eslint-config-preact": "^1.3.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "preact": "^10.6.5"
  },
  "scripts": {
    "build": "esbuild src/background.ts src/popup.tsx src/options.tsx --bundle --minify --outdir=dist",
    "start": "esbuild src/background.ts src/popup.tsx src/options.tsx --bundle --sourcemap --watch --outdir=dist",
    "dist": "npm run clean && npm run build && npm run pack",
    "clean": "rm -f dist/*.js dist/*.zip",
    "pack": "cd dist && zip -r package.zip *",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  }
}
