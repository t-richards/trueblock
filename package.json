{
  "private": true,
  "devDependencies": {
    "@heroicons/react": "^1.0.6",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.2",
    "@types/chrome": "^0.0.193",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "esbuild": "^0.14.49",
    "eslint": "^8.19.0",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "build": "npm run css:prod && npm run js:prod",
    "css:dev": "tailwindcss -i ./src/app.css -o ./dist/app.css --watch",
    "css:prod": "tailwindcss -i ./src/app.css -o ./dist/app.css --minify",
    "js:prod": "esbuild src/background.ts src/popup.tsx src/options.tsx --bundle --minify --outdir=dist",
    "js:dev": "esbuild src/background.ts src/popup.tsx src/options.tsx --bundle --sourcemap=inline --watch --outdir=dist",
    "dist": "npm run clean && npm run build && npm run pack",
    "clean": "rm -f dist/*.js dist/*.css dist/*.zip",
    "pack": "cd dist && zip -r package.zip *",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "tsc": "tsc --project tsconfig.json --noEmit --watch --preserveWatchOutput"
  }
}
